public class NigeriaFlag {
public static void main(String[] args) {
// Dimensions of the flag
int height = 10; // Adjust as needed
int width = 30; // Adjust as needed
 
// Characters to represent the colors
char green = '*';
char white = '-';
 
// Single Loop Approach
System.out.println("Nigeria Flag (Single Loop)");
for (int i = 0; i < height; i++) {
for (int j = 0; j < width; j++) {
// Determine the character based on position
if (j < width / 3) {
System.out.print(green);
} else if (j < 2 * width / 3) {
System.out.print(white);
} else {
System.out.print(green);
}
} System.out.println(); // Move to the next line
}
